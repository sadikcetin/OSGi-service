package org.sifirbir.osgi.client.impl;

import org.sifirbir.osgi.client.api.IManager;
import org.sifirbir.osgi.services.api.IHello;
import org.sifirbir.osgi.services.api.IState;
import org.sifirbir.osgi.services.impl.TurkishLangImpl;

public class ManagerImpl implements IManager {
	
	private IState stateService;
	private IHello helloService;
	
	public ManagerImpl(IState x,IHello y){
		this.stateService = x;
		this.helloService = y;
		
		stateService.askState();
		helloService.sayHello(new TurkishLangImpl());
	}

	@Override
	public void addService() {

		System.out.println("Service Added...");
	}

	@Override
	public void removeService() {
		System.out.println("Service Removed...");
	}

}
